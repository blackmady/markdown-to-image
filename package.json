{
  "name": "md2img",
  "version": "1.0.12",
  "description": "A powerful Markdown to HTML/PDF/Image converter with live preview",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "deploy": "pnpm run build:prod && wrangler pages deploy dist",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "precommit": "node scripts/version-bump.js patch",
    "setup-hooks": "node scripts/setup-hooks.js",
    "postinstall": "node scripts/setup-hooks.js",
    "update-version-display": "node scripts/update-version-display.js",
    "gen-favicon": "magick -background none favicon.svg -resize 16x16 favicon.ico"
  },
  "keywords": [
    "markdown",
    "html",
    "pdf",
    "converter",
    "editor"
  ],
  "author": "blackmady",
  "license": "GPL-3.0",
  "devDependencies": {
    "vite": "^5.0.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.23.0",
    "codemirror": "^6.0.1",
    "dompurify": "^3.0.7",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.9.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "katex": "^0.16.23",
    "marked": "^11.1.1",
    "mermaid": "^11.12.0"
  }
}
